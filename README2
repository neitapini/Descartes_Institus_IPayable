//+++++++++++++++++++++++++++Client
//++++++++++++++++++Testing using ArrayList
package client;
import java.util.ArrayList;
import bus.*;

public class Tester1 {

	public static void main(String[] args) {
		
		
		ArrayList <Member> memberList = new ArrayList <Member>();
		ArrayList <Student> studentList = new ArrayList <Student>();
		ArrayList <Teacher> teachertList = new ArrayList <Teacher>();
		//STUDENT 1
		Student s1 = new Student();
		//Registration date
		Date aRegDateS1 = new Date();
		aRegDateS1.setDay(10);
		aRegDateS1.setMonth(10);
		aRegDateS1.setYear(2015);
		//Birthdate
		Date aBirthdateS1 = new Date();
		aBirthdateS1.setDay(23);
		aBirthdateS1.setMonth(11);
		aBirthdateS1.setYear(1978);
		//Address
		Address anAddressS1 = new Address();
		anAddressS1.setStrNum(1000);
		anAddressS1.setStrName("Rue Olive");
		anAddressS1.setAptNum(1010);
		anAddressS1.setCity("Montreal");
		anAddressS1.setProvince("Quebec");
		anAddressS1.setZipCode("J1S 2F5");
		anAddressS1.setCountry("Canada");
		
		s1.setId(100);
		s1.setFn("Jo");
		s1.setLn("Jojo");
		s1.setSsn("400-400-400");
		s1.setReg_HireDate(aRegDateS1);
		s1.setBirthDate(aBirthdateS1);
		s1.setMemberAddress(anAddressS1);
		s1.setFirstFees(1666.66);
		s1.setType(EnumMemberType.student);
		s1.setStatus(EnumStatusType.full_time);
		s1.calculPayment();
		memberList.add(s1);
		
		//TEACHER 1
		//Registration date
		Date aHireDateT1 = new Date();
		aHireDateT1.setDay(10);
		aHireDateT1.setMonth(10);
		aHireDateT1.setYear(2015);
		//Birthdate
		Date aBirthdateT1 = new Date();
		aBirthdateT1.setDay(23);
		aBirthdateT1.setMonth(11);
		aBirthdateT1.setYear(1978);
		//Address
		Address anAddressT1 = new Address();
		anAddressT1.setStrNum(1000);
		anAddressT1.setStrName("Rue Olive");
		anAddressT1.setAptNum(1010);
		anAddressT1.setCity("Montreal");
		anAddressT1.setProvince("Quebec");
		anAddressT1.setZipCode("J1S 2F5");
		anAddressT1.setCountry("Canada");
		
		Teacher t1 = new Teacher();
		t1.setId(100);
		t1.setFn("Sam");
		t1.setLn("Sams");
		t1.setSsn("500-500-500");
		t1.setReg_HireDate(aHireDateT1);
		t1.setBirthDate(aBirthdateT1);
		t1.setMemberAddress(anAddressT1);
		t1.setHoursPerWeek(30);
		t1.setHourlyRate(100);
		t1.setType(EnumMemberType.teacher);
		t1.setStatus(EnumStatusType.part_time);
		t1.calculPayment();
		memberList.add(t1);
		
		System.out.println("\n\t <<< Member List >>>");
		for(Member element :  memberList)
		{
			System.out.println(element);
		}
		for (Member record :  memberList)
		{
			if(record instanceof Student )
			{
				studentList.add((Student)record);
			}
			else if (record instanceof Teacher)
			{
				teachertList.add((Teacher)record);
			}
		}
		System.out.println("\n\t <<< Student List >>>");
		for (Member aMember : studentList)
		{
			System.out.println(aMember);
		}
		System.out.println("\n\t <<< Teacher List >>>");
		for (Member aMember : teachertList)
		{
			System.out.println(aMember);
		}
	}

}
